<div class="container">
  <div class="row mt-4">
     <div class='mx-auto col-2'>
      <%= render 'layouts/sideber', tag_lists: @tag_lists %>
    </div>

    <div class='ml-1 col-9'>
      <p id="notice"><%= notice %></p>
      <h3><%= @blog.title %></h3>
      <div class='bg-warning rounded-pill p-1 mb-3'></div>

      <div class='row'>
        <div class='col-4'>
          <% if @blog.image.attached? %>
          <%= image_tag @blog.image, size: "250x250" %>
          <% else %>
          <%= image_tag 'no_image', size: "250x250" %>
          <% end %>
        </div>
        <div class='col-8'>
          <table class="mt-table table-borderless">
            <tbody>
              <thead>
                <tr>
                  <th class="col-5"></th>
                  <th class="col-7"></th>
                  <th colspan="2"></th>
                </tr>
              </thead>
                <tr>
                  <td class="font-weight-bold">商品ジャンル</td>
                  <td><%= @blog.genre %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">おすすめしたい人</td>
                  <td><%= @blog.man %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">おすすめ度</td>
                  <td>
                    <div id="star-rate<%= @blog.id%>">
                      <script>
                        $('#star-rate<%= @blog.id %>').empty();
                        $('#star-rate<%= @blog.id%>').raty({
                        size      : 36,
                        starOff   : '<%= asset_path('star-off.png') %>',
                        starOn    : '<%= asset_path('star-on.png') %>',
                        starHalf  : '<%= asset_path('star-half.png') %>',
                        half      : false,
                        readOnly: true,
                        score: <%= @blog.star %>,
                        });
                      </script>
                    </div>
                  </td>
                </tr>
            </tbody>
          </table>
          <div class="mt-3 font-weight-bold">おすすめポイント</div>
          <div><%= @blog.body %></div>
        </div>
      </div>
      
      <div class='row'>
        <% @blog.tags.each do |list| %>
        <%= link_to list.tagname, blogs_path(tag_id: list.id), class: 'tag_list' %>
        <% end %>
      </div>

      <div class='row'>
        <p>コメント件数：<%= @blog.comments.count %></p>
        <% @blog.comments.each do |comment| %>
          <%= comment.user.name %>
          <%= comment.created_at.strftime('%Y/%m/%d') %>
          <%= comment.comment %>
          <% if comment.user == current_user %>
            <%= link_to 'コメントを削除する', blog_comment_path(@blog.id, comment.id), confirm: 'Are you sure?', method: :delete %>
          <% end %>
        <% end %>
      </div>
      <div class='row form-group'>
        <%= form_with model:[@blog, @comment], method: :post, local: false do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントを書いてください。", class: "w-100 comment-textarea" %>
        <%= f.submit "送信する",class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
        <% end %>
      </div>

      <div class='row'>
        <%= link_to "編集", edit_blog_path(@blog.id) %>
        <%= link_to "商品を削除", blog_path(@blog.id), method: :delete %>
      </div>
    </div>
  </div>
</div>