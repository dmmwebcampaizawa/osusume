<div class="container">
  <div class="row mt-4">
    <div class='mx-auto col-2'>
       <%= render 'layouts/sideber', tag_lists: @tag_lists %>
    </div>

    <div class='ml-1 col-9'>
      <p id="notice"><%= notice %></p>
      <h3><%= @tag.tagname %></h3>
      <div class='bg-warning rounded-pill p-1 mb-3'></div>

      <div class="container">
      <div class="row">
      <% @blogs.each do |blog| %>
      <div class="col">
       <%= link_to blog_path(blog.id) do %>
         <% if blog.image.attached? %>
           <%= image_tag blog.image, size: "220x220" %>
         <% else %>
           <%= image_tag 'no_image', size: "220x220" %>
         <% end %>
      <% end %>
      <p><%= blog.title %></p>
      <!--星レビュー-->
      <div id="star-rate<%= blog.id %>">
      <script>
      $('#star-rate<%= blog.id %>').empty();
      $('#star-rate<%= blog.id %>').raty({
      size      : 36,
      starOff   : '<%= asset_path('star-off.png') %>',
      starOn    : '<%= asset_path('star-on.png') %>',
      starHalf  : '<%= asset_path('star-half.png') %>',
      half      : false,
      readOnly: true,
      score: <%= blog.star %>,
      });
      </script>
      </div>

    </div>
    <% end %>
      </div>
      </div>
      

    </div>
  </div>
</div>