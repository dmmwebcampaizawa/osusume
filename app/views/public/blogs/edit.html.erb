<div class="container">
  <div class="row mt-4">
     <div class='col-2 mx-auto'>
       <%= render 'layouts/sideber', tag_lists: @tag_lists %>
    </div>

    <div class='ml-1 col-9 mt-4'>
      <h3>商品情報編集画面</h3>
      <div class='bg-warning rounded-pill p-1 mb-3'></div>

       <%= form_with model:[@tag, @blog] do |f| %>

        <div class="field">
          <%= f.label :商品名 %><br />
          <%= f.text_field :title, autofocus: true, autocomplete: "inputTitle" %>
        </div>

        <div class="field">
          <%= f.label :画像 %><br />
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="field">
          <%= f.label :紹介文 %><br />
          <%= f.text_field :body, autofocus: true, autocomplete: "inputBody" %>
        </div>

        <div class="field">
          <%= f.label :商品ジャンル %>
          <%= f.select :genre,
          [["電化製品", "電化製品"],
          ["インテリア", "インテリア"],
          ["食器", "食器"],
          ["食品", "食品"]], include_blank: "選択して下さい" %>
        </div>

        <div class="field">
          <%= f.label :おすすめしたい人 %><br />
          <%= f.text_field :man, autofocus: true, autocomplete: "inputMan" %>
        </div>

        <div class="field">
          <%= f.label :商品が購入できるリンク%><br />
          <%= f.text_field :link, autofocus: true, autocomplete: "inputLink" %>
        </div>

        <!--星レビュー機能-->
          <div id="star-rate<%= @blog.id %>">
            <script>
              $('#star-rate<%= @blog.id %>').empty();
              $('#star-rate<%= @blog.id%>').raty({
              size      : 36,
              starOff   : '<%= asset_path('star-off.png') %>',
              starOn    : '<%= asset_path('star-on.png') %>',
              starHalf  : '<%= asset_path('star-half.png') %>',
              half      : true,
              score: '<%= @blog.star %>',
              scoreName: 'blog[star]',
              });
            </script>
          </div>
        <!--タグ機能-->
        <div class="field">
        <%= f.text_field :tagname, autofocus: true, autocomplete: "inputTagname" %>
        </div>

        <%= f.submit "変更する", class: 'btn btn-success' %>

      <% end %>


    </div>
  </div>
</div>