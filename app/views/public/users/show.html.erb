<div class="container">
  <div class="row mt-4">
    <div class='mx-auto col-2'>
      <%= render 'layouts/sideber', tag_lists: @tag_lists %>
    </div>

    <div class='ml-1 col-9'>
        <p id="notice"><%= notice %></p>
        <h3>マイページ</h3>
        <div class='bg-warning rounded-pill p-1 mb-3'></div>

        <div class = "row ml-2">
            <div class = "col-3 rounded-circle">
                <% if @user.profile_image.attached? %>
                <%= image_tag @user.profile_image, size: "150x150", class: 'rounded-circle' %>
                <% else %>
                <%= image_tag asset_path('no_image.jpg'), size: "150x150", class: 'rounded-circle' %>
                <% end %>
            </div>

            <div class="col">
                <div class='row'>
                    <div class='col-3'>
                        <p class="font-weight-bold">ニックネーム</p>
                    </div>
                    <div class='col-4'>
                        <p><%= current_user.name %></p>
                    </div>
                </div>
                <div class='row-3'>
                   <%= current_user.introduction %>
                </div>
            </div>
        </div>

        <div class="text-right mt-4">
            <%= link_to "登録情報を変更する", edit_user_path(current_user.id), class: 'btn btn-info' %>
        </div>

        <h3 class='mt-4'>おすすめした商品</h3>
        <div class='bg-warning rounded-pill p-1 mb-3'></div>

        <div class="container">
        <div class="row-container">
            <% @user.blogs.order(created_at: :desc).each do |blog| %>
            <div class="blog-box">
                <%= link_to blog_path(blog.id), class: 'text-dark font-weight-bold' do %>
                    <% if blog.image.attached? %>
                    <%= image_tag blog.image, size: "220x220" %>
                    <% else %>
                    <%= image_tag asset_path('no_image.jpg'), size: "220x220" %>
                    <% end %>
                    <p><%= blog.title %><p>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>

  </div>
</div>
