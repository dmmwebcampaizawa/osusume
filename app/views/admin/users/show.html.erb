<div class="container">
  <div class="row mt-4">
    <div class='col-12 mt-4'>
      <p id="notice"><%= notice %></p>

      <h3>会員詳細画面（admin）</h3>
      <div class='bg-warning rounded-pill p-1'></div>

      <table class="mt- table table-borderless">
        <tbody>
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
            <tr>
              <td>会員ID</td>
              <td><%= @user.id %></td>
            </tr>
            <tr>
              <td>ニックネーム</td>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <td >会員ステータス</td>
              <td>
                <% if @user.is_deleted == false %>
                  <div class="text-success font-weight-bold">有効</div>
                <% else %>
                  <div class="font-weight-bold">退会</div>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>

        <div class="row mt-2">
          <div class="col-md-3">
            <%= link_to "編集する", edit_admin_user_path(@user.id), class: 'btn btn-success' %>
          </div>
        </div>

      <h3 class='mt-4'>おすすめした商品</h3>
      <div class='bg-warning rounded-pill p-1 mb-3'></div>

      <div class="container">
      <div class="row">
      <% @user.blogs.each do |blog| %>
      <div class="col">
       <%= link_to admin_blog_path(blog.id) do %>
         <% if blog.image.attached? %>
           <%= image_tag blog.image, size: "250x250" %>
         <% else %>
           <%= image_tag 'no_image', size: "250x250" %>
         <% end %>
      <% end %>
      <p><%= blog.title %></p>
      </div>
      <% end %>
      </div>
      </div>

    </div>
  </div>
</div>