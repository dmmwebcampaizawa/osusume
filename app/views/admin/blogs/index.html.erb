<div class="container">
  <div class="row mt-4">
    <div class='col-12 mt-4'>
      <h3>記事一覧画面（admin）</h3>
      <div class='bg-warning rounded-pill p-1'></div>
      <p id="notice"><%= notice %></p>

      <table class='table table-hover table-inverse'>
        <thead>
            <tr>
              <th>ID</th>
              <th>画像<th>
              <th>タイトル</th>
              <th>投稿ユーザー</th>
              <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
        <% @blog.each do |blog| %>
          <tr>
            <td>
              <%= blog.id %>
            </td>
            <td>
              <% if blog.image.attached? %>
              <%= image_tag blog.image, size: "20x20" %>
              <% else %>
              <%= image_tag 'no_image', size: "20x20" %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_blog_path(blog.id) do %>
              <%= blog.title %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_user_path(@blogs.id) do %>
              <%= @blogs.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
